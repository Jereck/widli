<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="text-center display-4">Photo Upload</h1>
</div>

<div class="m-auto w-75">
    <form action="/upload" method="POST" enctype="multipart/form-data">
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    <select class="custom-select" name="selection">
                        <option selected>Who's Uploading?</option>
                        <option value="megan" name="megan">Megan</option>
                        <option value="joe" name="joe">Joe</option>            
                    </select>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="form-group">
                    <div class="custom-file mb-3">
                        <label for="file">Upload File</label>                        
                        <input type="file" name="file" id="file" class="form-control-file">
                    </div>
                </div>
            </div>
        </div>
        <input type="submit" value="Submit" class="btn btn-primary btn-block">
    </form>
</div>




